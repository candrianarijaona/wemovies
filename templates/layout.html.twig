{% extends 'base.html.twig' %}

{% block content %}
    {% block header %}
        <div class="section_head flex flex-row items-center">
            <div class="basis-2/3">
                <h1 class="underline text-xl font-semibold"> A propos de We Movies</h1>
            </div>
            <div class="basis-1/3">
                <form>
                    <div class="relative w-full">
                        <input type="text" id="default-search" class=" border-2 block w-full p-4 pl-10 text-sm text-black border-gray-400 focus:ring-blue-500 focus:border-blue-500 bg-transparent" required>
                        <button type="submit" class="text-white absolute right-2.5 bottom-2.5 bg-transparent focus:ring-4 focus:outline-none font-medium text-sm px-4 py-2">
                            <svg aria-hidden="true" class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}

    {% block best_movie %}
        {{ render(controller(
            'App\\Controller\\BestMovieController::index'
        )) }}
    {% endblock %}

    <div class="section_list flex flex-row items-start mt-10">
        {% block aside %}
            {{ render(controller(
                'App\\Controller\\GenreController::index',
                { 'selectedGenreIds': app.request.query.get('genreId') }
            )) }}
        {% endblock %}
        <div class="right basis-3/4 pl-11">
            {% block right_content %}{% endblock %}
        </div>
    </div>
{% endblock %}
